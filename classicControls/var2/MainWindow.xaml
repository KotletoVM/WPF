            <ListBoxItem Margin="3">2 элемент</ListBoxItem>
            <ListBoxItem Margin="3">3 элемент</ListBoxItem>
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Копировать"></MenuItem>
                    <MenuItem Header="Вставить"></MenuItem>
                    <MenuItem Header="Вырезать"></MenuItem>
                    <MenuItem Header="Удалить"></MenuItem>
                </ContextMenu>
            </ListBox.ContextMenu>
            </ListBox>
    </Grid>
</Window>
