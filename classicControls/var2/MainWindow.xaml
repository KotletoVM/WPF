<Window x:Class="var2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:var2"
        mc:Ignorable="d"
        Title="Меню" Height="300" Width="223.821">
    <Grid>
        <Menu HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="20">
            <MenuItem Header="1 пункт">
                <TextBlock Text="1 элемент списка"/>
                <TextBlock Text="2 элемент списка"/>
                <TextBlock Text="3 элемент списка"/>
                <TextBlock Text="4 элемент списка"/>
