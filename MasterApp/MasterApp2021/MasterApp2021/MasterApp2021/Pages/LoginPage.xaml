<Page x:Class="MasterApp2021.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterApp2021.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource BlockCommon}" Text="Логин:" Width="100"></TextBlock>
                <TextBox Name="TBoxLogin" Margin="0,0,0,10"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль:" Style="{StaticResource BlockCommon}" Width="100"></TextBlock>
                <PasswordBox Name="PBoxPassword" Width="175"></PasswordBox>
            </StackPanel>
            <Button Name="BtnLogin" Content="Войти" HorizontalAlignment="Right" Margin="0,10,0,0" Click="BtnLogin_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
