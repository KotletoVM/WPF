<Window x:Class="Var2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Var2"
        mc:Ignorable="d"
        Title="Сохранение изображений" Height="450" Width="800" WindowStartupLocation="Manual" Left="100" Top="100" HorizontalAlignment="Right">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Margin="0,0,0,0" Content="Сохранить изображение" Click="Button_Click"></Button>
        <ListBox DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Top" >
            <ListBoxItem GotFocus="ListBoxItem_GotFocus">
                <TextBlock Text="Смешной кот в очках"/>
            </ListBoxItem>
            <ListBoxItem GotFocus="ListBoxItem_GotFocus_1">
                <TextBlock Text="Жизненная цитата"/>
            </ListBoxItem>
        </ListBox>
        <Image DockPanel.Dock="Right" x:Name="img1" HorizontalAlignment="Left"  VerticalAlignment="Top" />

    </DockPanel>
</Window>
